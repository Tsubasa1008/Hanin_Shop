<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>個人資料</h2>
    <ol class="breadcrumb">
      <li> 
        <%= link_to "首頁", dashboard_admin_path %>
      </li>
      <li class="active">
        <strong>個人資料</strong>
      </li>
    </ol>
  </div>
  
  <div class="col-lg-2">
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>個人資料修改</h5>
        </div>
        <div class="ibox-content">
          <%= form_for @manager, url: dashboard_admin_manager_path(@manager), method: 'patch', html: {id: "test", class: "form-horizontal"} do |f| %>
            <div class="form-group">
              <%= f.label :email, "信箱", class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.email_field :email, class: "form-control", required: true %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :name, "暱稱", class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-4 col-sm-offset-2">
                <%= f.submit "存檔", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 

<%= content_for :javascript do %>
    <script type="text/javascript">
      $(function() {
        <% if notice %>
          setTimeout(function() {
            toastr.options = {
              "closeButton": true,
              "debug": false,
              "progressBar": true,
              "preventDuplicates": true,
              "positionClass": "toast-top-center",
              "onclick": null,
              "showDuration": "400",
              "hideDuration": "1000",
              "timeOut": "4000",
              "extendedTimeOut": "1000",
              "showEasing": "swing",
              "hideEasing": "linear",
              "showMethod": "fadeIn",
              "hideMethod": "fadeOut"
            };
            toastr.info("<%= notice %>");
          }, 1300);
        <% end %>

        $("#test").validate({
          rules: {
            email: {
              required: true,
              email: true,
              remote: {
                url: "<%= check_manager_email_dashboard_admin_managers_path %>",
                dataType: "json",
                data: {
                  email: $("#manager_email").val()
                },
                success: function (data) {
                  console.log(data);
                }
              }
            }
          }
        });
      });
    </script>
<% end %>