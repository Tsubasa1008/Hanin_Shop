<div class="middle-box text-center loginscreen animated fadeInDown">
  <div>
    <h2>後台登入</h2>
    <% if alert %>
      <div class="alert alert-danger alert-dismissable">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
        <%= alert %>
      </div>
    <% end %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "m-t" }) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "信箱", required: true %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "密碼", required: true %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me, class: "i-checks" %>
          <%= f.label :remember_me, "保持登入狀態" %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "登入", class: "btn btn-primary block full-width m-b" %>
      </div>
    <% end %>

    <%= render "managers/shared/links" %>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(function() {
      $('.i-checks').iCheck({
        checkboxClass: 'icheckbox_square-green',
        radioClass: 'iradio_square-green',
      });
    });
  </script>
<% end %>
