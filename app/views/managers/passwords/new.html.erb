<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <h2>重設密碼</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "m-t" }) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "請輸入您的信箱", required: true %>
      </div>

      <div class="actions">
        <%= f.submit "寄送密碼重設信", class: "btn btn-primary block full-width m-b" %>
      </div>
    <% end %>
    <%= render "managers/shared/links" %>
  </div>
</div>
